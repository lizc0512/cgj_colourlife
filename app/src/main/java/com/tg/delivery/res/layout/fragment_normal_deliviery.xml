<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true">

    <RadioGroup
        android:id="@+id/rg_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_1dp">

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_weight="1"
            android:background="@drawable/select_rb"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全部"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/bg_text_color" />

        <RadioButton
            android:id="@+id/rb_today"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_weight="1"
            android:background="@drawable/select_rb"
            android:button="@null"
            android:gravity="center"
            android:text="今日滞留"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/bg_text_color" />

        <RadioButton
            android:id="@+id/rb_oneday"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_weight="1"
            android:background="@drawable/select_rb"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/font_12sp"
            android:text="滞留超1天"
            android:textColor="@color/bg_text_color" />

        <RadioButton
            android:id="@+id/rb_twoday"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_weight="1"
            android:background="@drawable/select_rb"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/font_12sp"
            android:text="滞留超2天"
            android:textColor="@color/bg_text_color" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_tag"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:text="0"
        android:textColor="@color/color_25282e"
        android:textSize="@dimen/font_12sp" />

    <TextView
        android:id="@+id/tv_ge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_tag"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:text="个"
        android:textColor="@color/color_25282e"
        android:textSize="@dimen/font_12sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_tag"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginRight="@dimen/size_2dp"
        android:layout_toLeftOf="@id/tv_ge"
        android:text="0"
        android:textColor="@color/color_597EF7"
        android:textSize="@dimen/font_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_tag"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_2dp"
        android:layout_toLeftOf="@id/tv_num"
        android:text="共计:"
        android:textColor="@color/color_25282e"
        android:textSize="@dimen/font_12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="@dimen/size_10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_all"
            android:layout_width="@dimen/size_22dp"
            android:layout_height="@dimen/size_22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_38dp"
            android:background="@drawable/select_checkbox"
            android:button="@null" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_toRightOf="@id/cb_all"
            android:text="全选"
            android:textColor="@color/color_25282e" />

        <TextView
            android:id="@+id/tv_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="共 0 个"
            android:textColor="@color/color_25282e" />

        <TextView
            android:layout_width="@dimen/size_125dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_597EF7"
            android:gravity="center"
            android:text="发送短信"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>