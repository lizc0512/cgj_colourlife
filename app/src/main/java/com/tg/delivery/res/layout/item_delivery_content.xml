<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_delivery"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_delivery_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_delivery_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:visibility="gone"
        android:background="@color/color_EBEBEB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_delivery_view" />

    <ImageView
        android:id="@+id/iv_delivery_icon"
        android:layout_width="@dimen/size_32dp"
        android:layout_height="@dimen/size_32dp"
        android:layout_marginLeft="@dimen/size_22dp"
        android:src="@drawable/kuaijianrucang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_delivery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12dp"
        android:textColor="@color/color_25282e"
        android:textSize="@dimen/font_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_delivery_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="快递入仓" />

    <View
        android:id="@+id/view_delivery_mid"
        android:layout_width="@dimen/size_1px"
        android:layout_height="@dimen/size_40dp"
        android:visibility="gone"
        android:background="@color/color_EBEBEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>