<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.tg.money.activity.WithDrawalStatusActivity">

    <include
        android:id="@+id/bindcard_top"
        layout="@layout/base_actionbar" />

    <ImageView
        android:id="@+id/iv_cash_icon"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_marginTop="@dimen/size_80dp"
        android:src="@drawable/exchange_success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bindcard_top" />

    <TextView
        android:id="@+id/tv_cash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_40dp"
        android:text="提现申请已提交"
        android:textColor="@color/color_333b46"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cash_icon" />

    <TextView
        android:id="@+id/tv_cash_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        android:textColor="@color/color_333b46"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cash_title"
        tools:text="提现金额0元" />

    <TextView
        android:id="@+id/tv_cash_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:gravity="center"
        android:textColor="@color/color_333b46"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cash_num"
        tools:text="非实时到账,具体到账时间以银行卡到账提醒为准" />

    <TextView
        android:id="@+id/tv_cash_btn"
        android:layout_width="@dimen/size_160dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:background="@drawable/bg_exchange_button_blue"
        android:gravity="center"
        android:textColor="@color/blue_text_color"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cash_msg"
        tools:text="继续提现" />
</android.support.constraint.ConstraintLayout>
