<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_140dp"
    android:layout_marginLeft="@dimen/size_15dp"
    android:layout_marginTop="@dimen/size_10dp"
    android:layout_marginRight="@dimen/size_15dp"
    android:background="@drawable/bg_instant_white">

    <TextView
        android:id="@+id/tv_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_20dp"
        android:textColor="@color/color_999faa"
        android:textSize="@dimen/font_14sp"
        tools:text="彩之云" />

    <TextView
        android:id="@+id/tv_group_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_1ca1f4"
        android:textSize="@dimen/font_22sp"
        tools:text="0.00" />

    <ImageView
        android:id="@+id/iv_group_fp"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_toLeftOf="@id/tv_group_money"
        android:src="@drawable/fp_icon" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_44dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_group_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="集体奖金包明细"
            android:textColor="@color/color_333b46"
            android:textSize="@dimen/font_14sp" />

        <View
            android:layout_width="@dimen/size_1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_group_myself"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的奖金包明细"
            android:textColor="@color/color_333b46"
            android:textSize="@dimen/font_14sp" />
    </LinearLayout>
</RelativeLayout>
