<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">




            <LinearLayout
                android:id="@+id/ll_identity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_16dp"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="钥匙身份"
                    android:textColor="@color/tv_index_color"
                    android:textSize="@dimen/font_16sp" />

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginLeft="@dimen/size_24dp"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_key_goto"
                    android:drawableRight="@drawable/ic_key_goto"
                    android:gravity="center|start"
                    android:hint="请选择"
                    android:textColor="@color/tv_index_color"
                    android:textColorHint="@color/login_tv_gray_account"
                    android:textSize="@dimen/font_16sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1px"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_16dp"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="手机号码"
                    android:textColor="@color/tv_index_color"
                    android:textSize="@dimen/font_16sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_36dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginLeft="@dimen/size_24dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/tv_index_color"
                    android:textSize="@dimen/font_16sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1px"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll_room"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_16dp"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="房  间  号"
                    android:textColor="@color/tv_index_color"
                    android:textSize="@dimen/font_16sp" />

                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginLeft="@dimen/size_24dp"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_key_goto"
                    android:drawableRight="@drawable/ic_key_goto"
                    android:gravity="center|start"
                    android:hint="请选择房间号"
                    android:textColor="@color/tv_index_color"
                    android:textSize="@dimen/font_16sp" />

            </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_32dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:background="@drawable/shape_key_submit_text"
        android:gravity="center"
        android:text="发送钥匙"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16sp" />

</LinearLayout>
