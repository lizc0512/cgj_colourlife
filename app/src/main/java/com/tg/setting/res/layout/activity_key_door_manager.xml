<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp">

        <ImageView
            android:id="@+id/back_finish_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/icon_top_return" />


        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_key_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxEms="9"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_18sp" />

            <ImageView
                android:id="@+id/iv_title_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_key_down" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_8dp"
            android:padding="@dimen/size_8dp"
            android:src="@drawable/ic_key_msg"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_8dp"
            android:layout_toLeftOf="@id/iv_msg"
            android:padding="@dimen/size_8dp"
            android:src="@drawable/ic_key_add"
            android:visibility="visible"
            tools:ignore="ContentDescription" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_door"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_key_door_select"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="门禁"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_12sp" />

        <TextView
            android:id="@+id/tv_key"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_key_key"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="钥匙包"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_12sp" />


        <TextView
            android:id="@+id/tv_statistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_key_door_statistics"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="统计"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_12sp" />

    </LinearLayout>


</LinearLayout>

