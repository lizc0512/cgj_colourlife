<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f3f4"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:text="钥匙名称"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:text="钥匙身份"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_key_goto"
            android:drawableRight="@drawable/ic_key_goto"
            android:gravity="center|start"
            android:hint="请选择"
            android:textColor="@color/tv_index_color"
            android:textColorHint="@color/login_tv_gray_account"
            android:textSize="@dimen/font_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/line_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingTop="@dimen/size_12dp"
        android:text="钥匙期限"
        android:textColor="@color/tv_index_color"
        android:textSize="@dimen/font_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/size_12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one_year"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="一年"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_two_year"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="两年"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_three_year"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="三年"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_forever"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="永久"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_16dp">

            <TextView
                android:id="@+id/tv_one_month"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="一月"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_one_week"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="一周"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_one_day"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="一天"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_key_choose_text"
                android:gravity="center"
                android:text="自定义"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:text="开始时间"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_24dp"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginEnd="@dimen/size_16dp"
                android:layout_marginRight="@dimen/size_16dp"
                android:background="@null"
                android:drawableEnd="@drawable/ic_key_goto"
                android:drawableRight="@drawable/ic_key_goto"
                android:gravity="center|start"
                android:hint="请选择"
                android:textColor="@color/tv_index_color"
                android:textColorHint="@color/login_tv_gray_account"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:text="结束时间"
                android:textColor="@color/tv_index_color"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_24dp"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginEnd="@dimen/size_16dp"
                android:layout_marginRight="@dimen/size_16dp"
                android:background="@null"
                android:drawableEnd="@drawable/ic_key_goto"
                android:drawableRight="@drawable/ic_key_goto"
                android:gravity="center|start"
                android:hint="请选择"
                android:textColor="@color/tv_index_color"
                android:textColorHint="@color/login_tv_gray_account"
                android:textSize="@dimen/font_16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:text="二维码失效时间"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_time_invalid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_key_goto"
            android:drawableRight="@drawable/ic_key_goto"
            android:gravity="center|start"
            android:hint="请选择"
            android:textColor="@color/tv_index_color"
            android:textColorHint="@color/login_tv_gray_account"
            android:textSize="@dimen/font_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_weight="1"
            android:text="获取钥匙需审核"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_16sp" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/ic_key_send_no_check" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f2f3f4">


        <TextView
            android:id="@+id/tv_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_32dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/shape_key_submit_text"
            android:gravity="center"
            android:text="生成二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp" />
    </LinearLayout>


</LinearLayout>
