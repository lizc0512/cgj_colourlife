<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/size_270dp"
        android:layout_height="@dimen/size_220dp"
        android:background="@drawable/bg_patrol_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/down_wifi"
            android:textColor="@color/color_bbc0cb"
            android:textSize="@dimen/font_11sp" />


        <Button
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/size_160dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_above="@id/tv_wifi"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_10dp"
            android:background="@drawable/update_corners"
            android:text="@string/update_version"
            android:textColor="@color/white" />


        <ListView
            android:id="@+id/list_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_ok"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_60dp"
            android:divider="#00000000"
            android:scrollbars="none" />


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginRight="0dp"
            android:padding="@dimen/size_16dp"
            android:src="@drawable/shoots_icon_close" />

    </RelativeLayout>


</LinearLayout>
