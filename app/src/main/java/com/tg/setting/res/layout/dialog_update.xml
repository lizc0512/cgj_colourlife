<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/size_275dp"
            android:layout_height="@dimen/size_160dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/popup_bg_system_upgrade" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_47dp"
            android:padding="@dimen/size_16dp"
            android:src="@drawable/shoots_icon_close" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/size_275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_patrol_white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:divider="#00000000"
            android:scrollbars="none" />

        <Button
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/size_160dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_below="@id/list_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@drawable/update_corners"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:text="@string/down_wifi"
            android:textColor="@color/color_bbc0cb"
            android:textSize="@dimen/font_11sp" />


    </RelativeLayout>
</LinearLayout>
