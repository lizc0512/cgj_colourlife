<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_16dp"
        android:text="快捷筛选"
        android:textColor="@color/tv_index_color"
        android:textSize="@dimen/font_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:background="@drawable/shape_key_choose_text"
            android:paddingLeft="@dimen/size_32dp"
            android:paddingTop="@dimen/size_6dp"
            android:paddingRight="@dimen/size_32dp"
            android:paddingBottom="@dimen/size_6dp"
            android:text="未绑定"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_key_choose_text"
            android:paddingLeft="@dimen/size_32dp"
            android:paddingTop="@dimen/size_6dp"
            android:paddingRight="@dimen/size_32dp"
            android:paddingBottom="@dimen/size_6dp"
            android:text="正常"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_exception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/shape_key_choose_text"
            android:paddingLeft="@dimen/size_32dp"
            android:paddingTop="@dimen/size_6dp"
            android:paddingRight="@dimen/size_32dp"
            android:paddingBottom="@dimen/size_6dp"
            android:text="异常"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_marginBottom="@dimen/size_12dp"
        android:text="楼栋"
        android:textColor="@color/tv_index_color"
        android:textSize="@dimen/font_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_build_min"
            android:layout_width="110dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:background="@drawable/shape_key_choose_edit_text"
            android:gravity="center"
            android:hint="最小"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/tv_index_color"
            android:textColorHint="@color/login_tv_gray_account"
            android:textSize="@dimen/font_14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/size_32dp"
            android:layout_height="@dimen/size_1dp"
            android:layout_gravity="center"
            android:background="@color/line_color" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/et_build_max"
            android:layout_width="110dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/shape_key_choose_edit_text"
            android:gravity="center"
            android:hint="最大"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/tv_index_color"
            android:textColorHint="@color/login_tv_gray_account"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_marginBottom="@dimen/size_12dp"
        android:text="单元号"
        android:textColor="@color/tv_index_color"
        android:textSize="@dimen/font_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_unit_min"
            android:layout_width="110dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:background="@drawable/shape_key_choose_edit_text"
            android:gravity="center"
            android:hint="最小"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/tv_index_color"
            android:textColorHint="@color/login_tv_gray_account"
            android:textSize="@dimen/font_14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/size_32dp"
            android:layout_height="@dimen/size_1dp"
            android:layout_gravity="center"
            android:background="@color/line_color" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/et_unit_max"
            android:layout_width="110dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/shape_key_choose_edit_text"
            android:gravity="center"
            android:hint="最大"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/tv_index_color"
            android:textColorHint="@color/login_tv_gray_account"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_marginTop="@dimen/size_18dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/tv_index_color"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_1da1f4"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp" />

    </LinearLayout>

</LinearLayout>