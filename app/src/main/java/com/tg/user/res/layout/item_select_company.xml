<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_62dp">

    <ImageView
        android:id="@+id/iv_company_logo"
        android:layout_width="@dimen/size_36dp"
        android:layout_height="@dimen/size_36dp"
        android:layout_marginLeft="@dimen/size_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_company_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/size_14dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:textColor="@color/color_131719"
        android:textSize="@dimen/font_14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_company_logo"
        app:layout_constraintRight_toLeftOf="@id/tv_company_join"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00000" />

    <TextView
        android:id="@+id/tv_company_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:textColor="@color/color_647786"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_company_logo"
        app:layout_constraintRight_toLeftOf="@id/tv_company_join"
        app:layout_constraintTop_toBottomOf="@id/tv_company_title"
        tools:text="00000" />

    <TextView
        android:id="@+id/tv_company_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_14dp"
        android:text="@string/user_company_join"
        android:textColor="@color/color_1ca1f4"
        android:textSize="@dimen/font_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
