<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_15"
        android:text="+2411"
        android:textColor="@color/record_expend"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_money"
        android:paddingLeft="@dimen/margin_18">

        <TextView
            android:id="@+id/tv_name"
            style="@style/black_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="来源：E停车-科技大厦" />

        <TextView
            android:id="@+id/tv_order_number"
           android:textSize="13sp"
            android:textColor="@color/text_color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/margin_10"
            android:text="业务订单号:15456749684" />

        <TextView
            android:id="@+id/tv_water_number"
            android:textSize="13sp"
            android:textColor="@color/text_color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_number"
            android:layout_marginTop="@dimen/margin_10"
            android:text="业务流水号:15456749684" />

        <TextView
            android:id="@+id/tv_time"
            android:textSize="13sp"
            android:textColor="@color/community_list_item_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_water_number"
            android:layout_marginTop="@dimen/margin_10"
            android:text="2017-15-17   12:25:34"
            android:layout_marginBottom="@dimen/margin_15"/>
    </RelativeLayout>
</RelativeLayout>
