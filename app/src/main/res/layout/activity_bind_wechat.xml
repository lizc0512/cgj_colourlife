<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_35dp"
        android:layout_marginTop="@dimen/size_65dp"
        android:text="手机号码"
        android:textColor="@color/color_25282e"
        android:textSize="@dimen/font_16sp" />

    <com.tg.coloursteward.view.ClearEditText
        android:id="@+id/et_bindwx_phone"
        android:layout_width="@dimen/size_200dp"
        android:layout_height="@dimen/size_25dp"
        android:layout_marginLeft="@dimen/size_17dp"
        android:layout_marginTop="@dimen/size_63dp"
        android:layout_toRightOf="@id/phone"
        android:background="@null"
        android:digits="@string/delivery_phone"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/color_25282e"
        android:textColorHint="@color/color_6D7278"
        android:textSize="@dimen/font_14sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_below="@id/phone"
        android:layout_marginLeft="@dimen/size_35dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginRight="@dimen/size_35dp"
        android:background="@color/bg_color" />

    <TextView
        android:id="@+id/codename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginLeft="@dimen/size_35dp"
        android:layout_marginTop="@dimen/size_60dp"
        android:text="验证码"
        android:textColor="@color/color_25282e"
        android:textSize="@dimen/font_16sp" />

    <com.tg.coloursteward.view.ClearEditText
        android:id="@+id/et_bindwx_code"
        android:layout_width="@dimen/size_120dp"
        android:layout_height="@dimen/size_25dp"
        android:layout_below="@id/view"
        android:layout_marginLeft="@dimen/size_17dp"
        android:layout_marginTop="@dimen/size_58dp"
        android:layout_toRightOf="@id/phone"
        android:background="@null"
        android:digits="@string/delivery_phone"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textColor="@color/color_25282e"
        android:textColorHint="@color/color_6D7278"
        android:textSize="@dimen/font_14sp" />

    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/size_35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_60dp"
        android:text="获取验证码"
        android:layout_below="@id/phone"
        android:textColor="@color/color_3A85E9"
        android:textSize="@dimen/size_12dp" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:layout_below="@id/et_bindwx_code"
        android:layout_marginLeft="@dimen/size_35dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginRight="@dimen/size_35dp"
        android:background="@color/bg_color" />

    <TextView
        android:id="@+id/tv_bindwx_done"
        android:layout_width="@dimen/size_280dp"
        android:layout_height="@dimen/size_48dp"
        android:layout_below="@id/view_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_40dp"
        android:background="@drawable/bg_login_button_blue"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14sp" />

</RelativeLayout>
