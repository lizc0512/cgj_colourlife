<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical"
    tools:context="com.tg.coloursteward.ChangePhoneActivity">

    <TextView
        android:id="@+id/tv_changphone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="请填写更换手机号码"
        android:textColor="@color/text_color3"
        android:textSize="18dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/tv_changphone_title"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_changphone_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="手机号"
            android:textColor="@color/text_color3"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_changphone_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@id/tv_changphone_phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="25dp"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/tv_changphone_title"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_changphone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="验证码"
            android:textColor="@color/text_color3"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_changphone_code"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_changphone_code"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_changephone_send"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/bule_corners"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="*更改手机号，同账号绑定的彩之云账号将被替换*"
        android:textColor="@color/record_expend" />

    <TextView
        android:id="@+id/tv_changephone_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bule_corners"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
