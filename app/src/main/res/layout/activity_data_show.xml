<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_orgId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="彩生活服务集团"
            android:textColor="@color/text_10"
            android:textSize="@dimen/font_15sp" />

        <ImageView
            android:id="@+id/iv_orgId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_toLeftOf="@id/tv_orgId"
            android:src="@drawable/coordinates_fill_black" />
    </RelativeLayout>


    <TextView
        android:id="@+id/rb_noticBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="管理类"
        android:textColor="@color/radio_bg_selected"
        android:textSize="@dimen/font_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/radio_bg_selected" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:text="@string/tv_datashow_area"
            android:textColor="@color/text_10"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_datashow_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_15dp"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/font_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:text="@string/tv_datashow_community"
            android:textColor="@color/text_10"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_datashow_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_15dp"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/font_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/line" />
</LinearLayout>