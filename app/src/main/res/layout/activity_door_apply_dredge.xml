<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    tools:context="com.tg.coloursteward.DoorActivity" >

    <ImageView
        android:id="@+id/img_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:src="@drawable/icon_door_empty" />

    <TextView
        android:id="@+id/txt_no_open"
        style="@style/black_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="本小区尚未开通手机开门" />

    <Button
        android:id="@+id/btn_apply_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_no_open"
        android:layout_alignRight="@+id/txt_no_open"
        android:layout_below="@+id/txt_no_open"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_shape_pass"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="申请开通"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_apply_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_apply_open"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="已有*位邻居申请开通"
        android:textColor="@color/gray"
        android:textSize="16dp" />

</RelativeLayout>