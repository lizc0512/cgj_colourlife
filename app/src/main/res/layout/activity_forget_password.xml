<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_color"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_account"
                style="@style/black_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ems="3"
                android:gravity="right"
                android:singleLine="true"
                android:text="账号"
                android:textColorHint="@color/form_text" />

            <EditText
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/txt_account"
                android:background="@color/transparent"
                android:hint="输入OA账号"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_color2"
                android:textColorHint="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/base_color"
            android:padding="10dp">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@color/transparent"
                android:hint="输入姓名"
                android:singleLine="true"
                android:textColor="@color/text_color2"
                android:textColorHint="@color/text_color1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edit_name"
                android:layout_alignBottom="@+id/edit_name"
                android:ems="3"
                android:gravity="right"
                android:text="姓名"
                android:textColorHint="@color/form_text"
                style="@style/black_16"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/base_color"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ems="3"
                android:gravity="right"
                android:text="手机号"
                android:textColorHint="@color/form_text"
                style="@style/black_16"/>

            <EditText
                android:id="@+id/edit_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_number"
                android:background="@color/transparent"
                android:hint="输入手机号"
                android:inputType="number"
                android:textColor="@color/text_color2"
                android:textColorHint="@color/text_color1"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearlayout"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_blue"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
