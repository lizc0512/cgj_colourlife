<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/base_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_25dp"
        android:background="@color/base_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="5"
            android:gravity="right"
            android:singleLine="true"
            android:text="短信验证码"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edit_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/txt_verify"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/text_color2"
            android:textColorHint="@color/text_color1"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/base_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="5"
            android:gravity="right"
            android:text="新密码"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_password"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_color2"
            android:textColorHint="@color/text_color1"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/base_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="5"
            android:gravity="right"
            android:text="确认新密码"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edit_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_password_confirm"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_color2"
            android:textColorHint="@color/text_color1"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_blue"
        android:text="确定"
        android:stateListAnimator="@null"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>