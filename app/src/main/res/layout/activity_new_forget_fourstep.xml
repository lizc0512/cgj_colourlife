<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_image_back"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/nav_back_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/color_191f25"
        android:textSize="@dimen/size_18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="张三"
        android:textColor="@color/color_131719"
        android:textSize="@dimen/size_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <TextView
        android:id="@+id/tv_set_pawd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="设置新密码"
        android:textColor="@color/color_999faa"
        android:textSize="@dimen/size_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name" />


    <EditText
        android:id="@+id/edit_pawd"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请设置8-18位字母+数字密码"
        android:inputType="textPassword"
        android:maxLength="18"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:textColor="@color/color_131719"
        android:textColorHint="@color/color_bbc0cb"
        android:textSize="@dimen/size_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_set_pawd" />

    <ImageView
        android:id="@+id/iv_show_pawd"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/work_icon_invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_set_pawd" />

    <Button
        android:id="@+id/btn_reset_pawd"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/next_button_default"
        android:text="重置密码"
        android:textColor="@color/color_bbbbbb"
        android:textSize="@dimen/size_16dp"
        app:layout_constraintLeft_toLeftOf="@id/edit_pawd"
        app:layout_constraintRight_toRightOf="@id/iv_show_pawd"
        app:layout_constraintTop_toBottomOf="@id/edit_pawd" />


</androidx.constraintlayout.widget.ConstraintLayout>