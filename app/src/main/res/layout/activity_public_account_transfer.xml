<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical"
    tools:context=".PublicAccountTransferActivity">

    <com.tg.coloursteward.view.RoundImageView
        android:layout_width="@dimen/margin_66"
        android:layout_height="@dimen/margin_66"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_15"
        android:src="@drawable/moren_person" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--  <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:src="@drawable/public_money" />-->

                    <TextView
                        style="@style/hint_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="种类：" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_typeName"
                    style="@style/hint_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分饭票" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    style="@style/hint_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡号：" />

                <TextView
                    android:id="@+id/tv_ano"
                    style="@style/hint_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6547651635" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_18"
        android:paddingRight="@dimen/margin_18"
        android:paddingTop="@dimen/margin_15">

        <TextView
            style="@style/hint_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账金额" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edit"
                style="@style/light_gray_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dip"
                android:background="@null"
                android:hint="请输入金额"
                android:inputType="numberDecimal"
                android:paddingBottom="@dimen/margin_20"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:paddingTop="@dimen/margin_10"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/edit"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/bonus_division" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_send_message"
                style="@style/light_gray_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="捎句悄悄话（30个字以内）"
                android:maxLength="30"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_12"
                android:paddingRight="@dimen/margin_8"
                android:paddingTop="@dimen/margin_20"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/edt_send_message"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="8dp"
                android:background="@color/bonus_division" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ticket"
            style="@style/hint_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:text="可用余额：0.00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/white_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="确认转账" />
    </LinearLayout>

</LinearLayout>