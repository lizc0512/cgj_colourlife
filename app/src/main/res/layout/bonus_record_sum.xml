<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:divider="@drawable/spacer_medium"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_15" >

                    <TextView
                        android:id="@+id/textView_1"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基础奖金包" />

                    <TextView
                        android:id="@+id/tv_baseBonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_1"
                        android:layout_marginTop="10dp"
                        android:text="0.00"
                        android:textColor="@color/bonus_sum"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_15" >

                    <TextView
                        android:id="@+id/textView_2"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="超预算奖金" />

                    <TextView
                        android:id="@+id/tv_chaoys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_2"
                        android:layout_marginTop="10dp"
                        android:text="0.00"
                        android:textColor="@color/bonus_sum"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_horizontal_02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:divider="@drawable/spacer_medium"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_15" >

                    <TextView
                        android:id="@+id/textView_3"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奖励总额" />

                    <TextView
                        android:id="@+id/tv_increase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_3"
                        android:layout_marginTop="10dp"
                        android:text="0.00"
                        android:textColor="@color/bonus_sum"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_15" >

                    <TextView
                        android:id="@+id/textView_4"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扣款总额" />

                    <TextView
                        android:id="@+id/tv_decrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_4"
                        android:layout_marginTop="10dp"
                        android:text="0.00"
                        android:textColor="@color/bonus_sum"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>