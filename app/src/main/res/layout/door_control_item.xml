<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:context="com.tg.coloursteward.DoorApplyActivity" >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_open"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_community_name"
            style="@style/black_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_num"
            android:padding="5dp"
            android:text="" />

        <TextView
            android:id="@+id/txt_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_community_name"
            android:layout_toRightOf="@+id/txt_num"
            android:padding="5dp"
            android:text=""
            android:textColor="#898888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_num"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/txt_open_time"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_roundness_share"
            android:paddingLeft="10dp"
            android:textSize="52sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="点击开门"
        android:textColor="@color/lightblue"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>