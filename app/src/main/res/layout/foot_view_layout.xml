<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_foot_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.tg.coloursteward.view.RotateProgress
        xmlns:app="http://schemas.android.com/apk/res/com.tg.coloursteward"
        android:id="@+id/progressBar_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:size="20dp" />

    <TextView
        android:id="@+id/tv_foot_msg"
        style="@style/light_gray_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

</LinearLayout>