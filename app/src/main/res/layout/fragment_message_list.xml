<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="消息"
            android:textColor="@color/color_445056"
            android:textSize="@dimen/font_18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_contactfragment_scan"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="@dimen/size_12dp"
            android:src="@drawable/nav_icon_add_normal" />

        <ImageView
            android:id="@+id/iv_contactfragment_qrcode"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_8dp"
            android:layout_toLeftOf="@id/iv_contactfragment_scan"
            android:padding="@dimen/size_10dp"
            android:src="@drawable/nav_icon_qrcode_normal" />

    </RelativeLayout>

    <include layout="@layout/message_list_item_header_search" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/message_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hx_message_empty_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/hxm_no_record_yet"
                android:textColor="@color/hxs_color_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/message_refresh_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px" />

    </RelativeLayout>


</LinearLayout>
