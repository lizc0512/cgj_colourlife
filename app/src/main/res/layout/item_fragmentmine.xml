<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fragmentmineline"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:id="@+id/view_fragmentmine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_fragmentmineline"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_fragmentmine"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/view_fragmentmine"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_fragmentmine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp" />

        <TextView
            android:id="@+id/tv_fragmentmine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_fragmentmine"
            android:text=""
            android:textColor="@color/text_color3"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iv_fragmentmine_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/next" />

    </RelativeLayout>

</RelativeLayout>