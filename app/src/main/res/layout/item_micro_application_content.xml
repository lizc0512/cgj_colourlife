<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fragmentthree"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_centerInParent="true"
    android:background="@drawable/item_mine_selector">

    <ImageView
        android:id="@+id/iv_fragmentthree_icon"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/default_header" />

    <TextView
        android:id="@+id/tv_tinyserverfragment_num"
        android:layout_width="22dp"
        android:layout_height="@dimen/size_16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_fragmentthree_icon"
        android:background="@drawable/bg_serverfragment_num"
        android:gravity="center"
        android:text="16"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_fragmentthree_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fragmentthree_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_647786"
        android:textSize="@dimen/font_13sp" />
</RelativeLayout>

