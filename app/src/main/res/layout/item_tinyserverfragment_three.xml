<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_centerInParent="true"
    android:background="@drawable/item_mine_selector"
    android:id="@+id/rl_fragmentthree">

    <ImageView
        android:id="@+id/iv_fragmentthree_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/default_header"/>
    <TextView
        android:id="@+id/tv_tinyserverfragment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_toRightOf="@id/iv_fragmentthree_icon"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_serverfragment_num"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_fragmentthree_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fragmentthree_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/tv_tinyserver_tiem"
        android:textSize="13dp" />
</RelativeLayout>

