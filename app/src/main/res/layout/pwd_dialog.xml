<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="301dp"
    android:layout_height="180dp"
    android:background="@drawable/pwd_dialog_bg"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
    
	<TextView
	    android:id="@+id/tv_pwd_desc"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="15dp"
	    android:gravity="center"
	    android:text="请设置支付密码"
	   style="@style/light_gray_15" />
        
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal" >
    
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="270dp"
            android:layout_height="38dp"
            android:inputType="numberPassword"
            android:layout_centerHorizontal="true"
            android:cursorVisible="false"
            android:longClickable="false"
            android:maxLength="6" />

        <ImageView
            android:id="@+id/img_input"
            android:layout_width="270dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pwd_dialog_edt" />

        <ImageView
            android:id="@+id/pwd_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/pwd_input_2" />

        <ImageView
            android:id="@+id/pwd_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/pwd_1"
            android:background="@drawable/pwd_input_2" />

        <ImageView
            android:id="@+id/pwd_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/pwd_2"
            android:background="@drawable/pwd_input_2" />

        <ImageView
            android:id="@+id/pwd_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/pwd_3"
            android:background="@drawable/pwd_input_2" />

        <ImageView
            android:id="@+id/pwd_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/pwd_4"
            android:background="@drawable/pwd_input_2" />

        <ImageView
            android:id="@+id/pwd_6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/pwd_5"
            android:background="@drawable/pwd_input_2" />
            
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/img_input"
	        android:layout_marginTop="20dp"
	        android:gravity="center"
	        android:orientation="horizontal">
	        
	        <Button 
		        android:id="@+id/btn_cancel"
		        android:layout_height="40dp"
		        android:layout_width="120dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:background="@drawable/pwd_dialog_btn_cancel"
		        style="@style/light_gray_15"
		        android:text="取消"/>
	        
	        <Button 
		        android:id="@+id/btn_confirm"
		        android:layout_height="40dp"
		        android:layout_width="120dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:layout_marginLeft="27dp"
		        android:textSize="15sp"
		        android:background="@drawable/pwd_dialog_btn_confirm"
		        android:textColor="@color/white"
		        android:text="确认"/>
	    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>