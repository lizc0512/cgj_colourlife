<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_18" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_18"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_marginBottom="@dimen/margin_18"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年2月12日  20:14"
                android:textColor="@color/record_time" />

            <TextView
                android:id="@+id/tv_detail"
                style="@style/black_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:layout_marginTop="@dimen/margin_5"
                android:text="集体奖金" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="+22.00元"
                android:textColor="@color/record_receive" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_note"
            style="@style/light_gray_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:text="加载中..." />

        <TextView
            android:id="@+id/tv_remark"
            style="@style/light_gray_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="加载中..." />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bonus_division" />

</RelativeLayout>