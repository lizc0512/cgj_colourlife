<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youmai.hxsdk">

    <!-- Normal Permissions start -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!-- Normal Permissions end -->


    <!-- Dangous Permissions start -->
    <!-- STORAGE -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--SMS-->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <!--PHONE-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <!-- MICROPHONE -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--LOCATION-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--CONTACTS-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!--CAMERA-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Dangous Permissions end-->

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <!--这里com.xiaomi.mipushdemo改成app的包名-->
    <permission
        android:name="${applicationId}.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signature" />
    <!--这里com.xiaomi.mipushdemo改成app的包名-->
    <uses-permission android:name="${applicationId}.permission.MIPUSH_RECEIVE" />


    <!--flyme-->
    <!-- 兼容flyme5.0以下版本，魅族内部集成pushSDK必填，不然无法收到消息-->
    <permission
        android:name="${applicationId}.push.permission.MESSAGE"
        android:protectionLevel="signature" />

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.meizu.flyme.push.permission.RECEIVE" />

    <uses-permission android:name="${applicationId}.push.permission.MESSAGE" />

    <!--  兼容flyme3.0配置权限-->
    <uses-permission android:name="com.meizu.c2dm.permission.RECEIVE" />

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

    <!--huawei-->
    <!-- Push需要的权限 -->
    <!-- 可选，使用Push标签上报需要的权限,不上报标签就不需要 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application>

        <!-- *************************************** -->
        <!-- 接入合作方APP 需要修改的API KEY值 begin -->
        <!-- *************************************** -->
        <!-- 高德地图 APPKEY-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="@string/amap_apikey" />

        <activity
            android:name="com.youmai.hxsdk.LoginPromptActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/HxMsgTheme" />

        <activity
            android:name="com.youmai.hxsdk.map.LocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <!--剪裁页面-->
        <activity
            android:name="com.youmai.hxsdk.crop.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxWindowAnimTheme" />

        <activity
            android:name="com.youmai.hxsdk.activity.WebViewActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.activity.CropImageActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/HxMsgTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="img" />
            </intent-filter>
        </activity>

        <!--查看接受到的图片-->
        <activity
            android:name="com.youmai.hxsdk.activity.PictureIndicatorActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.module.picker.PreviewImageActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.module.picker.PreviewVideoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.activity.CropMapActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/HxMsgTheme" />

        <!--视频录制-->
        <activity
            android:name="com.youmai.hxsdk.module.movierecord.MovieRecodeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HxMsgTheme" />

        <!--IM消息-->
        <activity
            android:name="com.youmai.hxsdk.activity.IMConnectionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkNewTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" />


        <activity
            android:name="com.youmai.hxsdk.activity.IMGroupActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkNewTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" />


        <!--IM文件预览、下载打开-->
        <activity
            android:name="com.youmai.hxsdk.IMFilePreviewActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.module.picker.PhotoPreviewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.module.picker.PhotoDirectoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.youmai.hxsdk.picker.FilePickerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true" />

        <activity
            android:name="com.youmai.hxsdk.picker.MediaDetailsActivity"
            android:configChanges="orientation|keyboardHidden" />

        <!--file manager start-->
        <activity
            android:name="com.youmai.hxsdk.module.filemanager.activity.FileManagerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <activity
            android:name="com.youmai.hxsdk.module.filemanager.activity.FileClassifyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkNewTheme" />

        <activity
            android:name="com.youmai.hxsdk.module.filemanager.activity.FileDownloadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <activity
            android:name="com.youmai.hxsdk.module.filemanager.activity.FileDLClassifyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkNewTheme" />
        <!--file manager end-->

        <activity
            android:name="com.youmai.hxsdk.module.photo.activity.PhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <activity
            android:name="com.youmai.hxsdk.module.photo.activity.PhotoPreViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <activity
            android:name="com.youmai.hxsdk.activity.CameraActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <!--视频播放-->
        <activity
            android:name=".module.videoplayer.VideoPlayerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <!--设置提醒-->
        <activity
            android:name="com.youmai.hxsdk.module.remind.SetRemindActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <!--聊天群相关的界面-->
        <activity
            android:name="com.youmai.hxsdk.module.groupchat.ChatDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HxSdkTheme" />

        <receiver
            android:name="com.youmai.hxsdk.receiver.HuxinReceiver"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.HOME" />

                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />

                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <action android:name="huxin.intent.action.START_SERVER" />
                <action android:name="huxin.intent.action.PUSH_MSG" />

            </intent-filter>
        </receiver>


        <service android:name=".service.ForegroundEnablingService" />

        <service
            android:name=".service.HuxinStartJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name=".service.SendMsgService"
            android:permission="1000" />

        <service
            android:name="com.youmai.hxsdk.service.HuxinService"
            android:enabled="true"
            android:exported="false"
            android:persistent="true">
            <intent-filter>
                <action android:name="com.youmai.huxin.service.BOOT_SERVICE" />
                <action android:name="com.youmai.huxin.service.NEW_OUTGOING_CALL" />
                <action android:name="com.youmai.huxin.service.IM_LOGIN_OUT" />
            </intent-filter>
        </service>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>


        <!-- 高德定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService" />


    </application>

</manifest>