<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/color_text_black1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/global_search_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/hx_btn_back_selector"
            android:gravity="center_vertical"
            android:textColor="@color/hxs_color_white"
            android:textSize="15sp"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/global_search_bar_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="取消"
            android:textColor="@color/hxs_color_white"
            android:textSize="15sp" />


        <com.tg.coloursteward.module.search.SearchEditText
            android:id="@+id/global_search_bar"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/global_search_bar_cancel"
            android:layout_toRightOf="@id/global_search_bar_back"
            android:background="@drawable/global_contacts_search_bg"
            android:drawablePadding="12dp"
            android:hint="搜索"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:textColorHint="@color/hxb_subtitle_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <include layout="@layout/global_activity_search_empty_layout"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/contacts_search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clipChildren="false" />

            <FrameLayout
                android:id="@+id/message_search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="40dp"
                    android:layout_height="1px"
                    android:background="#979797" />

                <TextView
                    android:id="@+id/group_empty_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#979797"
                    android:gravity="center"
                    android:text="把社区服务做到家" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1px"
                    android:background="#979797" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>