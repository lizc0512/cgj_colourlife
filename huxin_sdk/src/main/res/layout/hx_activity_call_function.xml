<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hx_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hook_top_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/hx_circle_corner_trans_bg">

        <com.youmai.hxsdk.recyclerview.page.FunctionPageView
            android:id="@+id/hook_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hook_common_call_info"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <com.youmai.hxsdk.recyclerview.page.FunctionIndicator
            android:id="@+id/card_header_indicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/hook_recycler_view"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

</LinearLayout>