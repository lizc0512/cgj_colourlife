<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/fl_back_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/hx_hook_close" />
        </FrameLayout>

        <com.youmai.hxsdk.view.CountImageView
            android:id="@+id/civ_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/hx_call_after_messenger" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hook_common_finish_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/hx_sdk_hook_layout_01"
        android:textColor="@color/hxs_color_white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/hook_call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:textColor="#99ffffff"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/hook_common_head_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:background="@drawable/hx_call_after_user_male_bg"
        android:padding="4dp"
        android:src="@drawable/hx_call_after_user_normal" />

    <TextView
        android:id="@+id/hook_common_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:ems="12"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="100dp"
        android:textColor="@color/hxs_color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hook_common_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:textColor="#99ffffff"
        android:textSize="12sp" />

</LinearLayout>