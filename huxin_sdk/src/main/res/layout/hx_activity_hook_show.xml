<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_show_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hx_transparent"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/card_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/hxs_color_white_one"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="1dp"
        app:contentPadding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/hx_shop_show_image"
                android:layout_width="108dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/hx_shop_show_btn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/hx_sdk_hook_layout_19"
                android:textColor="@color/hx_main_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hx_shop_show_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hx_shop_show_image"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/hx_shop_show_image"
                android:layout_toRightOf="@+id/hx_shop_show_image"
                android:text="@string/hx_sdk_hook_layout_20"
                android:textColor="@color/hxs_color_white"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>