<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_arc_jokes_layout"
        android:layout_width="260dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hx_shape_corner_gray_bg">

        <ScrollView
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="#FFFFFF"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_arc_jokes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="15.3sp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_arc_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/hx_shape_corner_gray_bg">

            <ImageView
                android:id="@+id/iv_arc_close"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/hx_icon_close_show_selector" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>