<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_notify_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="@string/hx_notify_one"
        android:textColor="@drawable/hx_txt_selector"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" />

    <Button
        android:id="@+id/btn_notify_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="@string/hx_notify_two"
        android:textColor="@drawable/hx_txt_selector"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" />

    <Button
        android:id="@+id/btn_notify_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="@string/hx_notify_three"
        android:textColor="@drawable/hx_txt_selector"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" />

    <Button
        android:id="@+id/btn_notify_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="@string/hx_notify_system"
        android:textColor="@drawable/hx_txt_selector"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="@string/hx_sdk_back"
        android:textColor="@drawable/hx_txt_selector"
        android:textSize="15sp" />

</LinearLayout>