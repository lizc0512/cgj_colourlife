<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/im_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/im_card_toolbar" />

    <LinearLayout
        android:id="@+id/img_content_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hx_card_center_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_date"
            style="@style/im_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hx_fragment_im_data" />

        <LinearLayout style="@style/im_content_card_style">

            <include layout="@layout/hx_item_im_select_lay" />

            <ImageView
                android:id="@+id/sender_iv"
                android:layout_width="@dimen/card_head"
                android:layout_height="@dimen/card_head"
                android:src="@drawable/hx_im_user_header" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_head_to_content_margin"
                    android:background="@drawable/hx_im_voice_bg_left"
                    android:clickable="true"
                    android:minHeight="40dp"
                    android:minWidth="96dp">

                    <LinearLayout
                        android:id="@+id/item_btn"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/voice_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/hx_im_left_anim_v3" />

                        <TextView
                            android:id="@+id/sender_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="2&quot;"
                            android:textColor="#A6AFBB"
                            android:textSize="@dimen/card_font_size_msmall" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_voice_text_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="40dp"
                        android:minWidth="68dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#9BA5B2" />

                        <TextView
                            android:id="@+id/item_voice_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="120dp"
                            android:minWidth="68dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="4dp"
                            android:text="文字"
                            android:textColor="@color/hx_item_left_font"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/item_voice_text_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:minWidth="68dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="0dp"
                            app:srcCompat="@drawable/hx_voice_triangular_ic" />

                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/item_voice_send_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/hx_im_voice_type_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="来自他人语音"
                    android:textColor="#BFC3CA"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/read_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/hx_im_voice_unread" />

            <ImageView
                android:id="@+id/imgRemind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>