<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/im_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/im_card_toolbar" />

    <LinearLayout
        android:id="@+id/img_content_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hx_card_center_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_date"
            style="@style/im_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hx_fragment_im_data" />

        <LinearLayout style="@style/im_content_card_style">

            <include layout="@layout/hx_item_im_select_lay" />

            <LinearLayout
                style="@style/im_content_card_msg_style"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgRemind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:visibility="gone" />

                <include
                    layout="@layout/hx_im_send_status_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/item_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/card_head_to_content_margin"
                    android:layout_marginRight="@dimen/card_head_to_content_margin"
                    android:clickable="true">

                    <com.youmai.hxsdk.view.text.ItemTextView
                        android:id="@+id/sender_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:background="@drawable/hx_im_voice_bg_right"
                        android:drawableRight="@drawable/hx_btn_location_share"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="@dimen/card_font_size_small_spacing"
                        android:maxWidth="200dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="14dp"
                        android:paddingTop="10dp"
                        android:text="消息"
                        android:textColor="@color/im_right_font"
                        android:textColorLink="@color/hx_color_orange2"
                        android:textSize="@dimen/card_font_size_small"
                        app:position="right" />

                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/sender_iv"
                android:layout_width="@dimen/card_head"
                android:layout_height="@dimen/card_head"
                android:src="@drawable/hx_im_user_header" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_share_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/hx_im_date_bg_shape"
            android:minHeight="16dp"
            android:minWidth="46dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="位置共享已经结束"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>