<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:huxin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2.6dp">

    <!--文件-->
    <LinearLayout
        android:id="@+id/rl_send_file_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_send_file"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="2.6dp"
            android:src="@drawable/hx_full_file_others" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_send_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:maxWidth="200dp"
                android:text="Tea1mWork.doc"
                android:textColor="@color/hx_color_black1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/iv_send_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="right|bottom"
                android:text="13.5KB"
                android:textColor="@color/hx_color_black1"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <!--图片&地图-->
    <RelativeLayout
        android:id="@+id/rl_send_pic_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--图片-->
        <ImageView
            android:id="@+id/iv_send_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3.3dp" />

        <!--地图-->
        <LinearLayout
            android:id="@+id/ll_send_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_send_location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/hxs_color_white"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/hxs_color_black1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_send_location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/hxs_color_white"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/hxs_color_gray9"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vv_send_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/hx_full_shade" />

    <LinearLayout
        android:id="@+id/ll_send_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youmai.hxsdk.view.progressbar.RoundProgressBarWithProgress
                android:id="@+id/circle_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:padding="5dp"
                android:progress="35"
                huxin:progress_radius="25dp"
                huxin:progress_reach_color="@color/hx_transparent"
                huxin:progress_text_color="@color/hx_color_white"
                huxin:progress_unreach_color="@color/hx_transparent" />

            <ImageView
                android:id="@+id/iv_send_status_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_send_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_progress_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="15sp" />

    </LinearLayout>

    <!--暂时不使用， 用popupWindow-->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gf_send_emo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:visibility="gone" />

</RelativeLayout>