<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_jokes_layout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/hx_circle_corner_emo_bg_2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="6dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/hx_icon_remind_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_jokes_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/hx_keep_shape_rectangle"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="段子"
        android:textColor="@color/hxs_color_gray15"
        android:textSize="11sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/rl_close"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="6dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_jokes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:lineSpacingExtra="8dp"
                android:paddingRight="5dp"
                android:textColor="@color/hxs_color_black4"
                android:textSize="16sp" />

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_joke_exchange"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/hx_tip_dialog_green_white_selector"
            android:gravity="center"
            android:text="换一个"
            android:textColor="@color/hxs_color_blue1" />

        <TextView
            android:id="@+id/tv_joke_share"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hx_tip_dialog_green_selector"
            android:gravity="center"
            android:text="分享给TA"
            android:textColor="@color/hxs_color_white" />

    </LinearLayout>

</LinearLayout>