<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/hx_circle_corner_emo_bg_2">

    <RelativeLayout
        android:id="@+id/rl_jokes_layout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hx_circle_corner_emo_bg_2">

        <RelativeLayout
            android:id="@+id/rl_send_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hx_icon_remind_close" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/rl_send_close"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_send_jokes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/hxs_color_black4"
                    android:textSize="16sp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_joke_send_function"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_joke_send_exchange"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/hx_tip_dialog_green_white_selector"
            android:gravity="center"
            android:text="换一个"
            android:textColor="@color/hxs_color_blue1" />

        <TextView
            android:id="@+id/tv_joke_send_share"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hx_tip_dialog_green_selector"
            android:gravity="center"
            android:text="分享给TA"
            android:textColor="@color/hxs_color_white" />

    </LinearLayout>

</LinearLayout>