<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/linear_bar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_above="@id/linear_send"
        android:background="@drawable/hx_keep_shape_bg_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/player_pause"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/hx_video_play" />

        <SeekBar
            android:id="@+id/media_progress"
            style="@style/Widget.SeekBar.Media"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hxs_color_white"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hx_img_voice" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxEms="10"
            android:singleLine="true" />


        <TextView
            android:id="@+id/tv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="语音" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2" />


</LinearLayout>