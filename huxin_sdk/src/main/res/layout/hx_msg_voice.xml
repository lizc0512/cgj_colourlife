<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/dlg"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/msg_voice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/hx_im_left_anim_v3" />

            <TextView
                android:id="@+id/msg_sender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="23&quot;"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/msg_voice_iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hx_transparent"
            android:clickable="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hxm_call_msg_bg" />
    </FrameLayout>

    <ImageView
        android:id="@+id/msg_read_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dlg"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/hx_im_voice_unread" />

</RelativeLayout>