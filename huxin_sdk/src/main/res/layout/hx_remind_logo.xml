<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="28dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:gravity="center"
    android:background="@drawable/hx_icon_remind_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_remind_close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_close"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/iv_remind_dial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_dial"/>

        <ImageView
            android:id="@+id/iv_remind_shopping"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_shopping"/>

        <ImageView
            android:id="@+id/iv_remind_meeting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_meeting"/>

        <ImageView
            android:id="@+id/iv_remind_travel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_travel"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_remind_dating"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_dating"/>

        <ImageView
            android:id="@+id/iv_remind_hospital"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_hospital"/>

        <ImageView
            android:id="@+id/iv_remind_repayment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_repayment"/>

        <ImageView
            android:id="@+id/iv_remind_birthday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_birthday"/>

        <ImageView
            android:id="@+id/iv_remind_fitness"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/hx_icon_remind_fitness"/>

    </LinearLayout>

</LinearLayout>