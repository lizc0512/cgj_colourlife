<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/hx_tip_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
    	android:id="@+id/tv_tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/hx_phiz_item_remind"
        android:textColor="@color/swap_titel_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!--View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" /-->

    <TextView
        android:id="@+id/tv_tip_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lineSpacingExtra="2dp"
        android:padding="24dp"
        android:textColor="@color/hx_text_color1"
        android:textSize="15sp" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="#e6e6e6" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/sure_btn"
            style="@style/hx_dialog_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/hx_color_white" />

    </LinearLayout>

</LinearLayout>