<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_show_preview_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="ishow">

    <ImageView
        android:id="@+id/iv_rep_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <TextureView
        android:id="@+id/vv_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hx_icon_full_jianbian_bg">

        <!--个人信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_full_jump_msg"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_full_header_bg"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_full_header_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hx_icon_full_header_male_bg" />

                <ImageView
                    android:id="@+id/iv_full_header"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/hx_icon_full_header_normal" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_full_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#FF000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:text="Emma"
                    android:textColor="@color/hx_color_white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_full_locale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#FF000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:text="@string/hx_show_full_setting_calling_address"
                    android:textColor="@color/hx_color_white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!--消息logo-->
        <RelativeLayout
            android:id="@+id/rl_full_jump_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/hx_icon_full_message_bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_full_msg_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hx_icon_full_message"
                android:gravity="center"
                android:textColor="@color/hx_color_white" />

        </RelativeLayout>

        <!--整个功能-->
        <LinearLayout
            android:id="@+id/ll_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/hx_circle_corner_trans_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_parent"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_half_send_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/hx_icon_full_position_normal"
                        android:gravity="center"
                        android:text="@string/hx_show_full_setting_info_send_location"
                        android:textColor="@color/hx_color_white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_half_send_pic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/hx_icon_full_pic_normal"
                        android:gravity="center"
                        android:text="@string/hx_show_full_setting_info_send_pic"
                        android:textColor="@color/hx_color_white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_half_send_jokes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/hx_icon_full_camera_nor"
                        android:gravity="center"
                        android:text="@string/hx_show_full_setting_info_send_camera"
                        android:textColor="@color/hx_color_white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_half_send_emo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/hx_icon_full_emo_normal"
                        android:gravity="center"
                        android:text="@string/hx_show_full_setting_info_send_emoji"
                        android:textColor="@color/hx_color_white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/hx_shape_white_solid_circle" />

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/hx_shape_white_hollow_circle" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dial_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="40dp">

                <ImageView
                    android:id="@+id/iv_dial_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:clickable="true"
                    android:padding="2dp"
                    android:src="@drawable/hx_icon_full_dialkey_hovor_selector" />

                <ImageView
                    android:id="@+id/iv_refuse_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/hx_icon_full_refuse02_hovor_selector"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/iv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="36dp"
                    android:clickable="true"
                    android:padding="2dp"
                    android:src="@drawable/hx_icon_full_voice_normal" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--收起按钮-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="10dp"
        android:background="@drawable/hx_icon_full_up_hover" />

</FrameLayout>