<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/im_card_head">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/im_toolbar_card_action"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/im_toolbar_edit"
                android:id="@+id/im_toolbar_edit_btn"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/im_toolbar_edit"
                android:id="@+id/im_toolbar_merge_btn"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/im_toolbar_edit"
                android:id="@+id/im_toolbar_remain_btn"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/im_toolbar_edit"
                android:id="@+id/im_toolbar_forward_btn"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/im_toolbar_edit"
                android:id="@+id/im_toolbar_expand_btn"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/im_toolbar_card_name_action"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_height="50dp"
            android:visibility="gone">
            <Button
                android:id="@+id/im_toolbar_card_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/im_card_name_cancel"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/im_toolbar_card_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/im_card_name_save"/>
        </LinearLayout>
    </FrameLayout>

    <EditText
        android:id="@+id/im_toolbar_edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffff0000"
        android:lines="2"
        android:text="@string/hx_fragment_update_card_sex"/>
</LinearLayout>