<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="X轴"
                android:textColor="@color/hx_color_white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/x_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:inputType="number"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Y轴"
                android:textColor="@color/hx_color_white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/y_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:inputType="number"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Z轴"
                android:textColor="@color/hx_color_white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/z_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:inputType="number"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="宽度"
                android:textColor="@color/hx_color_white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/width_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:inputType="number"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="高度"
                android:textColor="@color/hx_color_white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/height_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:inputType="number"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/video_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="105dp"
            android:checked="true"
            android:text="视频 "
            android:textColor="@color/hx_color_white"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/audio_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="105dp"
            android:checked="true"
            android:text="音频 "
            android:textColor="@color/hx_color_white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/video_switch"
            android:layout_marginRight="41dp"
            android:background="@drawable/oval_btn_background"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>