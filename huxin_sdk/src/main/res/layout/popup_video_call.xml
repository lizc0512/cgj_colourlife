<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/home_show_bg"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        >

    <RelativeLayout

        android:id="@+id/rl_add_personal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_addsome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_addsome" />

        <TextView
            android:id="@+id/tv_add_some"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_addsome"
            android:text="添加成员"
            android:textColor="@color/color_theme_main"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/hx_color_gray"
        />
    <RelativeLayout
        android:id="@+id/rl_speak"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_shenqing"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_quiet" />

        <TextView
            android:id="@+id/tv_shenqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_shenqing"
            android:text="申请发言"
            android:textColor="@color/color_theme_main"
            android:textSize="14sp" />
    </RelativeLayout>
