<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/hxb_list_item_selector"
    >
    <ImageView
        android:id="@+id/iv_contact_header"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/color_default_header" />

    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/btn_sound"
        android:layout_toRightOf="@+id/iv_contact_header"
        android:textSize="15sp" />

    <Button
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:id="@+id/btn_sound"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/btn_video"
        android:text="语音"
        android:textSize="16sp"
        android:background="@drawable/hx_video_setting_selector"
        android:textColor="@color/hx_video_text_selector"
        />
    <Button
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:id="@+id/btn_video"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:text="视频"
        android:background="@drawable/hx_video_setting_selector"
        android:textColor="@color/hx_video_text_selector"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:background="@color/hxb_line_color" />


</RelativeLayout>
