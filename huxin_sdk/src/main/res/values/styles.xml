<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="HxSdkTheme" parent="HxBaseSdkTheme" />

    <!-- Base application theme. -->
    <style name="HxBaseSdkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hx_main_color</item>
        <item name="colorPrimaryDark">@color/hx_status_color</item>
        <item name="colorAccent">@color/hx_main_color</item>
        <item name="android:windowBackground">@color/hx_window_background</item>
    </style>

    <style name="HxInvisible">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="HxMsgTheme" parent="HxSdkTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="HxSdkNewTheme" parent="HxSdkTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!--hook style-->
    <style name="HxThemeHook" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/hx_status_color</item>
        <item name="colorAccent">@color/hx_main_color</item>
        <item name="android:windowBackground">@color/hx_window_background</item>
    </style>

    <!--red packet style-->
    <style name="HxRedPacketTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/hxs_color_red1</item>
        <item name="colorAccent">@color/hx_main_color</item>
        <item name="android:windowBackground">@color/hx_window_background</item>
    </style>

    <!--tip 第一次安装APP时提示-->
    <style name="ShowTipDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowIsFloating">true</item><!-- 是否悬浮在activity上 -->
        <item name="android:windowBackground">@android:color/transparent
        </item><!-- 背景透明 @android:color/transparent-->
        <item name="android:windowContentOverlay">@null</item><!-- 窗口是否有遮盖 -->
        <item name="android:windowIsTranslucent">false</item><!--半透明 false-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <attr name="fromDegrees" format="float|reference" />
    <attr name="toDegrees" format="float|reference" />
    <attr name="childSize" format="dimension|reference" />

    <declare-styleable name="ArcLayout">
        <attr name="fromDegrees" />
        <attr name="toDegrees" />
        <attr name="childSize" />
    </declare-styleable>

    <declare-styleable name="ArcMenu">
        <attr name="fromDegrees" />
        <attr name="toDegrees" />
        <attr name="childSize" />
    </declare-styleable>

    <declare-styleable name="RayLayout">
        <attr name="leftHolderWidth" format="dimension" />
    </declare-styleable>


    <!-- dialog -->
    <style name="hx_app_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!-- edit style -->
    <style name="hx_edit_1">
        <item name="android:textColorHint">@color/hx_color_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hx_color_black1</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/hx_login_selector</item>
    </style>

    <style name="hx_edit_2">
        <item name="android:textColorHint">@color/hx_color_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hx_color_black1</item>
        <item name="android:background">@drawable/hx_login_selector</item>
    </style>

    <!-- dialog btn -->
    <style name="hx_login_btn">
        <item name="android:background">@drawable/hx_btn_login_on</item>
        <item name="android:textColor">@drawable/hx_login_text_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="hx_sms_btn">
        <item name="android:background">@drawable/hx_btn_login_selector</item>
        <item name="android:textColor">@drawable/hx_login_text_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- crop -->
    <style name="Crop"></style>

    <style name="Crop.DoneCancelBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/crop__bar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/hx_crop__divider</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">12dp</item>
        <item name="android:background">@color/crop__button_bar</item>
    </style>

    <style name="Crop.ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/hx_crop__selectable_background</item>
    </style>

    <style name="Crop.ActionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">20dp</item> <!-- Offsets left drawable -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/crop__button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Crop.ActionButtonText.Done">
        <item name="android:drawableLeft">@drawable/hx_crop__ic_done</item>
        <item name="android:text">@string/hx_crop__done</item>
    </style>

    <style name="Crop.ActionButtonText.Cancel">
        <item name="android:drawableLeft">@drawable/hx_crop__ic_cancel</item>
        <item name="android:text">@string/hx_crop__cancel</item>
    </style>

    <!-- tip dialog -->
    <style name="hx_sdk_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- tip dialog btn -->
    <style name="hx_dialog_btn">
        <item name="android:background">@drawable/hx_tip_dialog_green_selector</item>
        <item name="android:textColor">@drawable/hx_tip_dialog_white_black_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PhoneDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RecordDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--im-->
    <style name="Theme_AudioDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/hx_tips_dialog_panel</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog_anim_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialog_anim_style_v14" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_v14</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_v14</item>
    </style>

    <style name="dialog_text_medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/hx_color_white</item>
    </style>

    <style name="dialog_text_small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/hx_color_white</item>
    </style>

    <style name="dialog_text_small_1">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/hx_color_white</item>
    </style>


    <style name="card_font">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/hx_color_black</item>
    </style>

    <style name="card_more_font">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#203442</item>
    </style>

    <style name="card_more_info_font">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/hx_text_color</item>
    </style>

    <style name="card_font_big">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/hx_color_white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="card_font_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F1F3F6</item>
        <item name="android:textColorHint">#F1F3F6</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HxWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="dialog_im_card_remark">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="hx_custom_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="bgSoundPopupMenu" parent="android:style/Widget.Material.ListPopupWindow">
        <item name="android:popupBackground">@drawable/hx_call_bg_sound_popmenu_bg</item>
        <item name="android:dropDownVerticalOffset">15dip</item>
        <item name="android:dropDownHorizontalOffset">-90dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="bgSoundPopupMenuTheme">
        <item name="android:popupMenuStyle">@style/bgSoundPopupMenu</item>
    </style>

    <!--cope text-->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>
    <!--tip-->
    <style name="PopupAnimation2" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in2</item>
        <item name="android:windowExitAnimation">@anim/popup_out2</item>
    </style>
    <!--emotion-->
    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontalspit_view_height</item>
        <item name="android:background">@color/spilt_line</item>
    </style>

    <style name="popupDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/hx_color_white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/dialog_animation</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimAmount">0.6</item><!-- 灰度 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="im_card_date">
        <item name="android:layout_marginTop">@dimen/card_lay_time_marginTop</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">@dimen/card_font_size_msmall</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/hx_im_date_bg_shape</item>
        <item name="android:minWidth">46dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="caed_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/swap_line_height</item>
        <item name="android:background">@color/swap_line_color</item>
    </style>

    <style name="caed_line_margin_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/swap_line_height</item>
        <item name="android:background">@color/swap_line_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="purse_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hx_color_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="purse_cardview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="share_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9ba5b2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">27dp</item>
        <item name="android:paddingRight">27dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/hx_share_invite_bg_selector</item>
    </style>

    <!--沟通卡主内容框样式-->
    <style name="im_content_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/card_lay_msg_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_lay_msg_margin</item>
    </style>
    <!--沟通卡主内容消息框样式-->
    <style name="im_content_card_msg_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VoipSelectDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/VoipSelectDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="VoipSelectDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>

    <!--TipView-->
    <style name="tip_pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/hx_pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/hx_pop_hidden_anim</item>
    </style>

    <!--日期&城市联动器-->
    <style name="custom_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="pickerview_dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/pickerview_dialog_scale_out</item>
    </style>

    <style name="press_style">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!--弹屏表情动画-->
    <style name="emoPopupAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/emo_anim_out</item>
        <item name="android:windowEnterAnimation">@anim/emo_anim_in</item>
    </style>

</resources>